.lobby-container {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    width: 100%;
    height: 100%;
}

.title {
    font-size: 32px;
    margin-bottom: 20px;
}

.join-code {
    font-size: 18px;
    margin-bottom: 10px;
}

.player-list {
    width: 300px;
    height: 200px;
    border: 1px solid #555;
    margin-bottom: 20px;
}

.start-button {
    font-size: 20px;
    padding: 10px 30px;
}

